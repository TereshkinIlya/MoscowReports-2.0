<Window x:Class="MoscowReports_2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:MoscowReports_2._0"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="Московская таблица v2.0" Height="330" Width="729">
    <Grid>
        <Label Content="Московская таблица" 
               HorizontalAlignment="Left" 
               Margin="10,29,0,0" 
               VerticalAlignment="Top" 
               RenderTransformOrigin="0.526,0.539" 
               Width="167" 
               FontSize="16"/>
        <TextBox 
            Text="{Binding MoscowTablePath}" 
            HorizontalAlignment="Left" 
            Margin="182,34,0,0" 
            TextWrapping="Wrap" 
            IsReadOnly="True" 
            VerticalAlignment="Top" 
            Width="426" 
            FontSize="14" 
            Height="26"/>
        <Button 
            Command="{Binding MoscowTablePathCommand}" 
            Content="Выбрать" 
            HorizontalAlignment="Left" 
            Margin="635,35,0,0" 
            VerticalAlignment="Top" 
            FontSize="16"/>
        <Label 
            Content="Таблица из ПИКТС" 
            HorizontalAlignment="Left" 
            Margin="10,95,0,0" 
            VerticalAlignment="Top" 
            RenderTransformOrigin="0.526,0.539" 
            Width="167" 
            FontSize="16"/>
        <TextBox
            Text="{Binding PiktsTablePath}" 
            HorizontalAlignment="Left" 
            Margin="182,100,0,0" 
            TextWrapping="Wrap" 
            IsReadOnly="True" 
            VerticalAlignment="Top" 
            Width="426" 
            FontSize="14" 
            Height="26">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=onlyReportsA, Path=IsChecked}" Value="True">
                            <Setter Property="Background"  Value="Black"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Button
            Command="{Binding PiktsTablePathCommand}" 
            Content="Выбрать" 
            HorizontalAlignment="Left" 
            Margin="635,101,0,0" 
            VerticalAlignment="Top" 
            FontSize="16">
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=onlyReportsA, Path=IsChecked}" Value="True">
                            <Setter Property="IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Label 
            Content="Приложения А" 
            HorizontalAlignment="Left" 
            Margin="10,159,0,0" 
            VerticalAlignment="Top" 
            RenderTransformOrigin="0.526,0.539" 
            Width="167" 
            FontSize="16"/>
        <TextBox 
            Text="{Binding ReportsA_Path}" 
            HorizontalAlignment="Left" 
            Margin="182,164,0,0" 
            TextWrapping="Wrap" 
            IsReadOnly="True" 
            VerticalAlignment="Top" 
            Width="426" 
            FontSize="14" 
            Height="26"/>
        <Button 
            Command="{Binding ReportsA_PathCommand}" 
            Content="Выбрать" 
            HorizontalAlignment="Left" 
            Margin="635,165,0,0" 
            VerticalAlignment="Top" 
            FontSize="16"/>
        <Label 
            Content="Не работай с оригиналом! Копируй файл на жесткий диск!" 
            HorizontalAlignment="Left" 
            Margin="218,56,0,0" 
            VerticalAlignment="Top" 
            Foreground="red"/>
        <Grid>
            <ProgressBar 
                Name="StatusBar"
                HorizontalAlignment="Left" 
                Height="22" 
                Margin="10,213,0,0" 
                VerticalAlignment="Top" 
                Width="691"
                Maximum="{Binding StatusMax}"
                Value="{Binding StatusValue}"
                IsIndeterminate="{Binding Infinite}"/>
            <TextBlock  
                Text="{Binding StatusText}"
                HorizontalAlignment="Left"
                TextAlignment="Center"
                VerticalAlignment="Top"
                FontFamily="Calibri"
                Margin="10,213,0,0"
                FontSize="17"
                FontWeight="Bold"
                Width="691" Height="22" />
        </Grid>
        <Label 
            Content="Приложения А с :" 
            HorizontalAlignment="Left" 
            Margin="10,255,0,0" 
            VerticalAlignment="Top" 
            RenderTransformOrigin="0.526,0.539" 
            Width="167" FontSize="16"/>
        <DatePicker 
            SelectedDate="{Binding LimitDate, Mode=TwoWay}"
            HorizontalAlignment="Left" 
            Margin="181,259,0,0" 
            VerticalAlignment="Top"/>
        <CheckBox x:Name="onlyReportsA"
            IsChecked="{Binding OnlyReportsA}"
            Content="Загрузка только приложений А" 
            HorizontalAlignment="Left" 
            Margin="335,261,0,0" 
            VerticalAlignment="Top" 
            FontSize="16"/>
        <Button 
            Command="{Binding RunCommand}" 
            x:Name="runBtn"
            Content="Запуск" 
            HorizontalAlignment="Left" 
            Margin="635,255,0,0" 
            VerticalAlignment="Top" 
            FontSize="16" 
            Width="66">
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="(Button.IsEnabled)">
                                        <DiscreteBooleanKeyFrame Value="False"></DiscreteBooleanKeyFrame>
                                    </BooleanAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
